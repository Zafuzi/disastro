---
import Header from "./components/Header/Header.astro";

export interface Props {
	title: string;
    page: string;
}

const { title, page} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <Header title={title} page={page}/>
		<slot />
	</body>
</html>

<style is:global lang="less">
    @import "../node_modules/coughdrop/coughdrop.less";
    * {box-sizing: border-box;}
    body, html {
        margin: 0;
        padding: 0;
        font-size: 12pt;
        line-height: 1.2;
        font-family: "System", "Helvetica Neue", "Helvetica", "Arial", sans-serif;
        width: 100vw;
        overflow-x: hidden;
    }
</style>

<script src="./lib.ts"></script>